@model SignInModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login Page</title>
   
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css">
    <style>
        body {
            background: linear-gradient(to right, #000000, #808080, #ffffff);
            margin: 0;
            height: 100vh;
            overflow: hidden;
        }

        .login-container {
            margin-top: 5%;
        }

        .login-form {
            border-radius: 1rem;
        }

        .login-button {
            background-color: #808080;
            color: #fff;
        }

        .login-button :hover{
                background-color: #2f2f2f;
            color: #fff;
        }

        .branding {
            color: #ff6219;
        }

        .img-fluid {
    max-width: 100%;
    height: 100%;
}
    </style>
</head>

<body>

    <section class="vh-100">
        <div class="container py-5 h-100">
            <div class="row justify-content-center align-items-center h-100">
                <div class="col col-xl-10">
                    <div class="card login-form border-0">
                        <div class="row g-0">
                            <div class="col-md-6 col-lg-5 d-none d-md-block">
                                <img src="https://images.lawpath.com.au/2020/06/sean-pollock-PhYq704ffdA-unsplash-scaled.jpg"
                                     alt="login form" class="img-fluid border-radius-1" />
                            </div>
                            <div class="col-md-6 col-lg-7 d-flex align-items-center">
                                <div class="card-body p-4 p-lg-5 text-black">
                                    <form>
                                        <div class="d-flex align-items-center mb-3 pb-1 branding">
                                            <i class="fas fa-cubes fa-2x me-3"></i>
                                            <span class="h1 fw-bold mb-0">Logo</span>
                                        </div>

                                        <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">
                                            Sign into your
                                            account
                                        </h5>

                                        <b class="text-danger"> @ViewData["result"] </b>
                                        <div class="form-outline mb-4">
                                            <label class="form-label" for="form2Example17" hidden>Username</label>
                                            <input type="text" id="form2Example17"
                                                   class="form-control form-control-lg" asp-for="Username" placeholder="Username"/>
                                            
                                        </div>

                                        <div class="form-outline mb-4">
                                            <label class="form-label" for="form2Example27" hidden>Password</label>
                                            <input type="password" id="form2Example27" asp-for="Password"
                                                   class="form-control form-control-lg" placeholder="Password" />
                                            
                                        </div>
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox"  asp-for="RemeberMe">
                                            <label class="form-check-label" for="flexCheckDefault">
                                                Remeber me
                                            </label>
                                        </div>
                                        <div class="pt-1 mb-4">
                                            <input type="submit" class="btn btn-dark btn-lg btn-block login-button" value="Login" asp-action="CheckUser">
                                                
                                           
                                        </div>

                                        <a href="#!" class="small text-muted">Forgot password?</a>
                                        <p class="mb-5 pb-lg-2" >
                                            <a href="#!" ></a>
                                        </p>
                                        <a href="#!" class="small text-muted"></a>
                                        <a href="#!" class="small text-muted"></a>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

   
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
</body>

</html>