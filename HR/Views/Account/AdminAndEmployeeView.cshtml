
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard Selection</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
       
        body {
            background: linear-gradient(to bottom right, #EEE, #AAA);
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
            margin: 0;
        }

        .dashboard-square {
            width: 35%;
            height: 60%;
            margin:10px;
            background-color: #808080;
            color: #fff;
            display: flex;
            border-radius:20%;
            justify-content: center;
            align-items: center;
            cursor: pointer;
            transition: background-color 0.3s;
        }

            .dashboard-square:hover {
                background-color: #3A3B3C;
            }


    </style>
</head>
<body>

    <div class="dashboard-square" onclick="redirectToAdminDashboard()">
        <h3>As Admin</h3>
    </div>

    <div class="dashboard-square" onclick="redirectToEmployeeDashboard()">
        <h3>As Employee</h3>
    </div>

    <script>
        function redirectToAdminDashboard() {
            window.location.href = 'http://localhost/hr/Employee/GetAllEmployee';
        }

        function redirectToEmployeeDashboard() {
            window.location.href = 'http://localhost/hr/Employee/MyProfile';
        }
    </script>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popperjs/core@2.5.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
